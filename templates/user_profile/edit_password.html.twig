{% extends 'base_user.html.twig' %}

{% block title %}Actualiza tu contraseña{% endblock %}

{% block content %}

<div class="container mt-4 mb-5">

    <a href="{{ path('app_user_view__profile') }}" class="btn btn-outline-secondary btn-sm mb-3">
        <i class="fas fa-arrow-left"></i> Volver
    </a>

    <h3 class="text-center">Actualiza la contraseña</h3>

    <div class="card shadow-sm" style="max-width: 500px; margin: 0 auto;">
       <div class="card-body">

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

                {{ form_start(formPassword, {'attr': {'data-turbo': 'false'}, 'method': 'POST', 'action': path('edit_password')})}}
                
                <div class="mb-3">
                    <label class="form-label" for="currentPassword">Contraseña Actual</label>
					{{ form_widget(formPassword.currentPassword, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Introduce tu contraseña actual'}}) }}
				</div>

                <div class="mb-3">
                    <label class="form-label" for="newPassword">Nueva contraseña</label>
                    {{ form_widget(formPassword.newPassword, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Introduce tu nueva contraseña'}})}}
                </div>

                <div class="mb-3">
                    <label class="form-label" for="confirmPassword">Confirma la nueva contraseña</label>
                    {{ form_widget(formPassword.confirmPassword, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Confirma tu nueva contraseña'}})}}
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-outline-primary">Actualizar contraseña</button>
                </div>

                {{ form_end(formPassword) }}

            </div>

        </div>
    </div>



{% endblock %}